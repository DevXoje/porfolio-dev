---
export interface ExperiencieItemProps {
	title: string
	description: string
	link?: string
	date: string
}
interface Props extends ExperiencieItemProps {}

const { title, description, link, date } = Astro.props
---

<div class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-gray-900 bg-gray-700">
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-sky-200/80">{date}</time>
<h3 class="mt-2 text-lg font-semibold text-yellow-800 dark:text-yellow-200">
	{title}
</h3>
<p class="mb-4 text-pretty text-base font-normal dark:text-gray-200">
	{description}
</p>
{
	link && (
		<a
			href={link}
			class="inline-flex 
    items-center justify-center gap-x-2
    rounded-full
    border border-gray-300 bg-white/5 px-2
    py-1 text-xs transition hover:scale-110
    hover:bg-white/10 md:px-4
    md:py-2
    md:text-base dark:border-white/10"
		>
			Saber m√°s...{' '}
			<svg
				class="ms-2 h-3 w-3 rtl:rotate-180"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 14 10"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M1 5h12m0 0L9 1m4 4L9 9"
				/>
			</svg>
		</a>
	)
}
