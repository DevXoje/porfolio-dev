{
  "name": "porfolio-dev",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:clean": "rimraf dist && rimraf src/pages/en",
    "postbuild": "node process-html.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "lint": " eslint --fix \"src/**/*.{js,jsx,ts,tsx,md,mdx,astro}\"",
    "format": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" --config prettier.config.mjs",
    "prepare": "husky install",
    "test": "vitest",
    "test:ci": "vitest --run",
    "coverage": "vitest run --coverage",
    "report": "lighthouse https://devxoje.github.io/porfolio-dev/ --output json --output-path ./report.json",
    "budget": "bash scripts/postpublish.sh",
    "translate": "npx astro-i18next generate"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource-variable/onest": "^5.0.2",
    "astro": "^4.0.8",
    "astro-i18next": "^1.0.0-beta.21",
    "autoprefixer": "^10.4.16",
    "globby": "^14.0.0",
    "html-minifier": "^4.0.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.1.1",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "vitest": "^1.1.0"
  }
}
